<%= render 'devise/shared/error_messages', resource: resource %>

<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h2 class="title has-text-centered"><%= t('.sign_up') %></h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: 'label' %>
            <div class="control">
              <%= f.email_field :email, autocomplete: 'email', required: true, class: 'input border-danger-with-error' %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: 'label mb-0' %>
            <p class='help has-text-dark'><%= "#{t('devise.shared.minimum_password_length', count: @minimum_password_length)}の" if @minimum_password_length %>半角英数記号</p>
          </div>
          <div class="field">
            <div class="control is-expanded">
              <%= f.password_field :password, autocomplete: 'new-password', required: true, minlength: @minimum_password_length, maxlength: '128', class: 'input border-danger-with-error' %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: 'label' %>
          </div>
          <div class="field">
            <div class="control is-expanded">
              <%= f.password_field :password_confirmation, autocomplete: 'new-password', required: true, minlength: @minimum_password_length, maxlength: '30', class: 'input border-danger-with-error' %>
            </div>
          </div>

          <div class="field">
            <p class="control">
              <%= f.submit t('.sign_up'), class: 'button is-fullwidth is-rounded is-info' %>
            </p>
          </div>
        <% end %>

        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</section>
