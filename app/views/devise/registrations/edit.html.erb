<%= render 'devise/shared/error_messages', resource: resource %>

<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h2 class="title has-text-centered">アカウント編集</h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="field">
            <%= f.label :email, class: 'label' %>
            <div class="control">
              <%= f.email_field :email, autocomplete: 'email', required: true, class: 'input border-danger-with-error' %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div><%= t('.currently_waiting_confirmation_for_email') %></div>
          <% end %>

          <div class="field">
            <%= f.label :password, class: 'label mb-0' %>
            <p class='help has-text-dark'><%= "#{t('devise.shared.minimum_password_length', count: @minimum_password_length)}の" if @minimum_password_length %>半角英数記号</p>
            <p class='help has-text-dark'><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></p>
          </div>
          <div class="field is-grouped js-password-area">
            <div class="control is-expanded">
              <%= f.password_field :password, autocomplete: 'new-password', minlength: @minimum_password_length, maxlength: '128', class: 'input border-danger-with-error' %>
            </div>
            <p class="control js-handle-password-mask">
              <button class="button" title="パスワードを表示する" onclick="return false;">
                <span class="icon is-small">
                  <i class="far fa-eye-slash"></i>
                </span>
              </button>
            </p>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: 'label' %>
          </div>
          <div class="field is-grouped js-password-area">
            <div class="control is-expanded">
              <%= f.password_field :password_confirmation, autocomplete: 'new-password', minlength: @minimum_password_length, maxlength: '128', class: 'input border-danger-with-error' %>
            </div>
            <p class="control js-handle-password-mask">
              <button class="button" title="パスワードを表示する" onclick="return false;">
                <span class="icon is-small">
                  <i class="far fa-eye-slash"></i>
                </span>
              </button>
            </p>
          </div>

          <div class="field">
            <%= f.label :current_password, class: 'label mb-0' %>
            <p class='help has-text-dark'><%= t('.we_need_your_current_password_to_confirm_your_changes', count: @minimum_password_length) %></p>
          </div>
          <div class="field is-grouped js-password-area">
            <div class="control is-expanded">
              <%= f.password_field :current_password, autocomplete: 'current-password', required: true, minlength: @minimum_password_length, maxlength: '128', class: 'input border-danger-with-error' %>
            </div>
            <p class="control js-handle-password-mask">
              <button class="button" title="パスワードを表示する" onclick="return false;">
                <span class="icon is-small">
                  <i class="far fa-eye-slash"></i>
                </span>
              </button>
            </p>
          </div>

          <div class="field">
            <p class="control">
              <%= f.submit t('.update'), class: 'button is-fullwidth is-rounded is-info' %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
