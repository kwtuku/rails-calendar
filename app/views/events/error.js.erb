var eventsFormModal = document.getElementById('events-form-modal')
var modalCardBody = eventsFormModal.querySelector('.modal-card-body')

modalCardBody.insertAdjacentHTML('afterbegin', '<%= j(render "shared/error_messages", model: @event) %>');

var body = document.querySelector('body');
var html = document.querySelector('html');

eventsFormModal.classList.add('is-active');
html.classList.add('is-clipped');
body.classList.add('mr-4');

<% if @event.errors[:name].any? %>
  eventsFormModal.querySelector('#event_name').classList.add('border-danger');
<% end %>

<% if @event.errors[:start_time].any? %>
  eventsFormModal.querySelector('#event_start_time').classList.add('border-danger');
<% end %>

<% if @event.errors[:end_time].any? %>
  eventsFormModal.querySelector('#event_end_time').classList.add('border-danger');
<% end %>

<% if @event.errors[:description].any? %>
  eventsFormModal.querySelector('#event_description').classList.add('border-danger');
<% end %>
